{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-env server.ts",
    "build": "deno compile --allow-net --allow-read --allow-env server.ts"
  },
  "imports": {
    "@nestjs/common": "npm:@nestjs/common@^10.4.5",
    "@nestjs/core": "npm:@nestjs/core@^10.4.5",
    "@nestjs/platform-express": "npm:@nestjs/platform-express@^10.4.5",
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true
  }
}
